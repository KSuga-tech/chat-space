.GroupInfo
  .OverView
    .GroupName
      = @group.name
    .MemberList
    %ul.MemberList__member
      member : 
      - @group.users.each do |group|
        %li.MemberList__name
          = group.name
  = link_to edit_group_path(current_user), class: 'EditBtn' do
    Edit

.MessageList 
  = render @messages

.MessageForm
  = form_with model: [@group, @message], html: {class: "FormBox"}, local: true do |f|
    .InputContent
      = f.text_field :body, class: 'InputContent__text', placeholder: "type a message"
      = f.label :image, class: 'InputContent__image' do
        = icon('far', 'image')
        = f.file_field :image, class: 'InputContent__hidden'
    = f.submit "Send", class: 'SendBtn'
